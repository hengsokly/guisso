%center
  %h1 Sign up

.row
  .span3.centred
    .box
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        / = devise_error_messages! / not needed, errors displayed on each field

        = f.input :email, :wrapper => :prepend, :label => false do
          %span.add-on
            %i.icon-envelope
          = f.input_field :email, placeholder: 'Email'

        = f.input :password, :wrapper => :prepend, :label => false do
          %span.add-on
          = f.input_field :password, placeholder: 'Password'

        = f.input :password_confirmation, :wrapper => :prepend, :label => false do
          %span.add-on
          = f.input_field :password_confirmation, placeholder: 'Password confirmation'

        .control-group
          .controls
            = f.submit "Sign up", class: 'btn'

      %hr

      = render "devise/shared/links"
